@model Comment_Post.Models.Post

<div class="custom-modal">
    <div class="custom-modal-content">
        <div class="custom-modal-header">
            <h5 class="modal-title">Add/Edit Post</h5>
          
        </div>
        <div class="custom-modal-body">
            @using (Html.BeginForm("AddEditPost", "Post", FormMethod.Post, new { id = "postForm", @class = "custom-form" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-group">
                    @Html.LabelFor(model => model.Title, new { @class = "custom-label" })
                    @Html.TextBoxFor(model => model.Title, new { @class = "form-control custom-input" })
                    @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                </div>
                   <div class="form-group">
                    @Html.LabelFor(model => model.Content, new { @class = "custom-label" })
                    @Html.TextBoxFor(model => model.Content, new { @class = "form-control custom-input" })
                    @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                </div>

                <!-- Add other form fields as needed -->

                <div class="form-group">
                    <button type="submit" class="btn btn-primary custom-btn">Save</button>
                </div>
            }
        </div>
    </div>
</div>
